<%= form_with local: true do |f| %>
  <h2>Create a New Application</h2>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>
  <%= f.label :address %>
  <%= f.text_field :address %><br>
  <%= f.label :city %>
  <%= f.text_field :city %><br>
  <%= f.label :state %>
  <%= f.text_field :state %><br>
  <%= f.label :zip %>
  <%= f.text_field :zip%><br>
  <%= f.label "Briefly describe why you make a good home for an adopted pet:"%><br>
  <%= f.text_area :adoption_reason, size: "70x5" %><br>
  <%= f.submit 'Create Application' %>
<% end %>
