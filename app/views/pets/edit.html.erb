<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
  <h2>Edit <%= link_to "#{@pet.name}", "/pets/#{@pet.id}" %></h2>
  <%= label_tag :image %>
  <%= text_field_tag :image, @pet.image %><br>
  <%= label_tag :name %>
  <%= text_field_tag :name, @pet.name %><br>
  <%= label_tag :description %>
  <%= text_field_tag :description, @pet.description %><br>
  <%= label_tag :approximate_age %>
  <%= number_field_tag :approximate_age, @pet.approximate_age %><br>
  <%= label_tag :sex %>
  <% if @pet.sex == :female %>
    <%= radio_button_tag :sex, :female, true %>
    <%= label_tag :female %>
    <%= radio_button_tag :sex, :male %>
    <%= label_tag :male %><br>
  <% else %>
    <%= radio_button_tag :sex, :female %>
    <%= label_tag :female %>
    <%= radio_button_tag :sex, :male, true %>
    <%= label_tag :male %><br>
  <% end %>
  <%= submit_tag "Update Pet" %>
<% end %>
