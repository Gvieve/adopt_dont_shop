<%= form_with url: "/shelters/#{@shelter.id}/pets", local: true do |f| %>
  <h2>Create a New Pet</h2>
  <%= f.label :image%>
  <%= f.text_field :image %><br>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :description%>
  <%= f.text_field :description %><br>
  <%= f.label :approximate_age %>
  <%= f.number_field :approximate_age %><br>
  <%= f.label :sex %>
  <%= f.radio_button :sex, :female %>
  <%= f.label :female %>
  <%= f.radio_button :sex, :male %>
  <%= f.label :male %><br>
  <%= f.submit 'Create Pet' %>
<% end %>
